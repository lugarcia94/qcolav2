.header 
    position: sticky
    top: 0
    z-index: 200

    background: #fff

    transition: all .2s ease-in-out

    [data-scrolling-mode=down] &
        border-bottom-style: solid
        border-bottom-width: 1px
        box-shadow: 0 0 10px rgba(0,0,0,.1)

    &__container 
        container: viewport
        display: flex 
        justify-content: space-between
        align-items: center
        margin: 0 auto
        padding: 10px (gutter/2)

        &:before 
            content: ''
            position: absolute 
            top: 0 
            left: 0 
            z-index: 2
            width: 100% 
            height: 100%
            background: #fff

    &__logo, &__menu, &__customer, &__minicart, &__button-search
        position: relative 
        z-index: 3

    &__logo 
        flex: 1
        padding: 0 (gutter/2)

    &__customer 
        display: none 
        padding: 0 (gutter/2)

    &__button-search
        margin-right: 10px

    &__service-center
        display: none 

@media mobile 
    .header 
        &__search 
            position: fixed 
            top: 0 
            left: 0 
            z-index: 200
            width: 100% 
            height: 100% 
            padding: 20px 
            display: flex 
            justify-content: center 
            align-items: center
            opacity: 0
            visibility: hidden
            transition: all .2s ease-in-out
            .search
                width: 90%
                position: relative 
                z-index: 300
            &[aria-hidden=false]
                opacity: 1
                visibility: visible
        
@media desktop 
    .header 
        margin-bottom: 100px

        &__container 
            position: relative 
            z-index: 20
            box-shadow: 700px 0 0 #fff, -700px 0 0 #fff
            background: #fff
            &:before 
                display: none 

        &__menu, &__button-search
            display: none

        &__search 
            flex: 1 
            min-width: 0

        &__logo
            flex: 0 0 auto
            margin-right: 60px

        &__customer, &__service-center
            display: block

        &__service-center 
            margin-left: 60px