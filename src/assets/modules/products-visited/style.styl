.products-visited
    display: none 
    padding: 0
    margin: 50px 0

    h4 
        font-size: 14px
        font-weight: regular 
        line-height: 1

.related-title
    font-size: 24px 
    font-weight: bold 
    text-transform: uppercase 

.visitados_produtos
    order: -1
    margin-right: 0
    min-width: 0

#NavVisitados
    margin-top: 20px 

    ul li
        float: none 
        padding: 15px 
        width: 100% 

    #produtos
        display: flex 
        justify-content:  flex-start 
        align-items: flex-start 
        flex-flow: row wrap

        > ul 
            flex: 1 1 200px

.visitados_itens
    border: 0 
    flex: 1 
    min-width: 0
    width: auto

#visitados_mestre
    display: flex 
    flex-flow: column nowrap

.visitados_itens
    min-height: 0
    padding-bottom: 30px

.visitados
    background: 0
    border: 0

    h4 
        font-weight: bold 
        text-transform: uppercase 

    .itens
        margin: 0
        width: auto 
        border: 0
        min-height: 0

    .paginacao_ajax
        padding-bottom: 10px 
        height: 30px
        border-bottom: solid 1px rgba(0,0,0,.05)

@media desktop 
    #visitados_mestre
        flex-flow: row nowrap

    #visitados_itens
        flex: 0 0 300px 
        padding-left: 20px 

    .visitados_produtos
        flex: 1
        min-width: 0