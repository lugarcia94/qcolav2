.filter 
    font-size: 14px
    font-weight: regular 

    &__item
        position: relative 
        padding: 3px 0

        &, a 
            font-size: 14px
            font-weight: regular 
            color: #A6AAB5

    &__input 
        position: absolute 
        opacity: 0

    &__title 
        font-size: 16px
        font-weight: bold 
        padding: 16px 0 10px

    &__name 
        margin-right: 3px

    &__count 
        font-size: 12px
        font-weight: regular 
        color: rgba(0,0,0,.5)

    &__label 
        display: flex 
        justify-content: flex-start 
        align-items: center
        cursor: pointer
        
        &:before 
            content: ''
            display: flex 
            justify-content: center 
            align-items: center
            width: 16px
            height: 16px 
            margin-right: 3px
            border: solid 1px rgba(0,0,0,.5)
            border-radius: 3px
            font-size: 10px

    &__input:checked
        + .filter 
            &__label:before 
                icon: '\f00c'
    &__actions
        display: none 
        padding: 20px 0

    &__button 
        width: 100%

    &__block 
        + .filter__block 
            border-top: solid 1px rgba(0,0,0,.05)
            margin-top: 20px
        &--apply 
            .filter__item 
                display: flex 
                justify-content: space-between
                align-items: center 

                a 
                    display: flex 
                    justify-content: center 
                    align-items: center 
                    width: 20px
                    height: 20px 
                    margin-left: 10px 

                    .icon 
                        fill: #FF5A25

@media mobile 
    .filter
        &__header
            .toolbar__button-filter
                display: none 
                    
@media desktop 
    .filter
        &__header
            margin-top: 20px
            .toolbar__button-filter
                display: block
                pointer-events: none