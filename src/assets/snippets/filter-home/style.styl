.filter-home
    background: #3E3E3E
    padding: 40px 0
    margin: 30px 0
    
    .slick-arrow 
        background: none 
        
        .icon 
            fill: #fff

    &__title 
        font-size: 28px
        font-weight: bold 
        color: #fff 
        text-transform: uppercase 
        letter-spacing: 2px
        text-align: center

    &__header 
        padding:  0 0 40px 

    &__container 
        container: viewport 
        margin: 0 auto 

    &__list 
        display: flex 

    &__item 
        padding: (gutter / 2)

    &__label 
        padding: 10px 0

    &__link
        display: flex 
        flex-flow: column nowrap 
        justify-content: center 
        align-items: center 

        font-size: 14px
        font-weight: medium 
        color: #ffffff
        text-transform: uppercase

        &:hover 
            text-decoration: none 

    &__image
        img 
            width: 110px 
            height: 110px 
            border-radius: 50% 
            min-width: 110px
            object-fit: cover 

@media (min-width: (viewport + 100))
    .filter-home 
        .slick-prev 
            left: -50px
        .slick-next 
            right: -50px