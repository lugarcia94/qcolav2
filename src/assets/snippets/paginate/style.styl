.paginate 
    text-align: center 

    &__pages
        display: inline-flex 
        flex-flow: row wrap 
        margin: 5px -5px

    &__link a, &__link--current 
        flex: 0 0 auto
        display: flex 
        justify-content: center 
        align-items: center 
        width: 100% 
        height: 100%
        background: #fff
        color: #4C989F

        &:hover 
            text-decoration: none 
            color: #4C989F


    &__link 
        display: inline-block
        width: 34px
        height: 34px
        border-style: solid
        border-width: 2px
        border-radius: 50%
        overflow: hidden 
        margin: 5px 
        // &--number:not(.paginate__link--current)
        //     display: none 
        &--last, &--first 
            display: none 

        &--first, &--prev, &--next, &--last 
            border-color: transparent
            a 
                font-size: 0 
                &:before 
                    font-size: 14px 

        &--first a:before 
            icon: '\f100'

        &--prev a:before 
            icon: '\f104'

        &--next a:before 
            icon: '\f105'

        &--last a:before 
            icon: '\f101'

        &--current 
            display: flex
            justify-content: center 
            align-items: center
            color: #fff

@media desktop 
    .paginate 
        padding-right: 20px
        text-align: left

        &__container 
            display: flex 
            justify-content: flex-start 
            align-items: center 

        &__pages 
            flex: 0 0 auto 

        &__count 
            flex: 1 
            min-width: 0 