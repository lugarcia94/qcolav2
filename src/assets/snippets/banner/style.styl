.banner 
    .slick-arrow 
        background: none 
        
        .icon 
            fill: #4E4E4E
    &--full 
        .banner
            &__list 
                white-space: nowrap 
                overflow: hidden 
                width: 100% 
                
            &__item 
                display: inline-block
                width: 100%
                height: 100% 

                img[src *=".svg"]
                    max-height: 100px

            &__img 
                width: 100% 
                height: 100% 
                min-height: 400px
                object-fit: cover 
                border-radius: 6px

                @media(max-width 767px)
                    min-height 0

            &__link 
                display: block 
    &--grid 
        .banner 
            &__list 
                display: flex 
                justify-content: space-between
                align-items: stretch
                margin: -(gutter / 2)
            &__item 
                padding: (gutter / 2)

                img 
                    width: 100% 
                    height: 100% 
                    object-fit: cover

    &--showcase 
        margin: 50px 0 0
        img 
            width: 100%
            height: 100% 
            object-fit: cover
    &-head 
        background: #343434
        &__container 
            container: viewport
            margin: 0 auto
            text-align: center
            line-height: 20px
            padding: 5px 0
            font-size: 11px 
            font-weight: regular 

        .icon 
            margin-right: 5px
            display: inline-block 
            vertical-align: middle

        strong 
            text-transform: uppercase